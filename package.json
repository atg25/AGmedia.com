{
  "name": "agmedia-website",
  "version": "2.0.0",
  "description": "AGmedia - Web Solutions for Small Businesses",
  "type": "module",
  "private": true,
  "scripts": {
    "lint:js": "eslint src/**/*.js --fix",
    "lint:css": "stylelint src/**/*.css --fix",
    "lint:html": "html-validate src/**/*.html",
    "lint": "npm run lint:html && npm run lint:js && npm run lint:css",
    "format": "prettier --write \"src/**/*.{html,css,js,json}\"",
    "test:a11y": "pa11y-ci",
    "test:lighthouse": "lhci autorun",
    "validate": "npm run lint && npm run test:a11y",
    "serve": "npx live-server src --port=8000",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "keywords": [
    "web",
    "design",
    "small-business"
  ],
  "author": "Andrew Gard",
  "license": "UNLICENSED",
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@lhci/cli": "^0.15.1",
    "eslint": "^9.14.0",
    "globals": "^16.4.0",
    "html-validate": "^10.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "pa11y-ci": "^4.0.1",
    "stylelint": "^16.10.0",
    "stylelint-config-standard": "^36.0.1"
  }
}
